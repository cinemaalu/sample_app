<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>    
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>


<!--Display Debug output in Dev env.-->
        <div class="alert"><%= 'Param:' %></div>
      <%= debug(params) if Rails.env.development? %> 
        <div class="alert"><%= 'Session:' %></div>
      <%= debug(session) if Rails.env.development? %>
        <div class="alert"><%= 'remember_token:' %></div>
      <%= cookies if Rails.env.development? %> 
        <div class="alert"><%= 'current_user:' %></div>
      <%= debug(current_user['name']) if  Rails.env.development? && defined?current_user['name']  %>

    </div>
  </body>
</html>
